<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/bg_bottom"
    android:id="@+id/bottomplaying"
    android:onClick="SongnameClick">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/album"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/iv_playing_album"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="海阔天空-Beyond"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_playing_album"
        android:layout_toLeftOf="@+id/ibtn_bottom_playorpause"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/tv_playing_name"
        />

    <ImageButton
        android:id="@+id/ibtn_bottom_playorpause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/playorpausebtn"
        android:layout_alignTop="@+id/iv_playing_album"
        android:layout_alignBottom="@+id/iv_playing_album"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:onClick="pause"
        />

</RelativeLayout>
