<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/playlisttype_itembg"
    >

    <ImageView
        android:id="@+id/iv_item_playlisttype_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/defaultlist_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tv_item_playlisttype_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_item_playlisttype_icon"
        android:layout_marginLeft="20dp"
        android:text="默认列表"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/iv_item_playlisttype_redirect"
        android:layout_width="15dp"
        android:layout_height="25dp"
        android:background="@drawable/redirect_icon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>

</RelativeLayout>